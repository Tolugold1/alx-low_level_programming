#include "main.h"
#include <string.h>

/**
 * puts_half - print half of a string;
 * @str: string to work with
 * Return: always 0.
 */

void puts_half(char *str)
{
	int len, i, half;
	char temp;

	len = strlen(str);
	half = len / 2;
	for (i = 0; i < half; i++)
	{
		temp = str[i];
		str[i] = str[len - half + i + 1];
		str[i] = temp;
	}
}
